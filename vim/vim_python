au BufNewFile,BufRead *.py
    \ set tabstop=4 |
    \ set softtabstop=4 |
    \ set shiftwidth=4 |
    \ set textwidth=100 |
    \ set expandtab |
    \ set foldmethod=indent |
    \ set autoindent |
    \ set fileformat=unix

" au BufRead,BufNewFile *.py,,*.cpp,*.h match BadWhitespace /\s\+$/

set encoding=utf-8

